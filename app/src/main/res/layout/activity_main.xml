<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientanimation"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Livebtn"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:text="@string/live"
        android:textColor="#FFFFFF"
        android:background="@drawable/btnradius"
        app:layout_constraintBottom_toTopOf="@+id/Imagebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91"
        app:backgroundTint="@color/red"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/Imagebtn"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/btnradius"
        android:text="@string/image"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="193dp"
        android:layout_height="239dp"
        android:layout_marginStart="87dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/Livebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/playstore" />
</androidx.constraintlayout.widget.ConstraintLayout>